<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'admin/genres/genre', genres: @genres %>
    </div>

    <div class="col-10">
      <h1>商品編集</h1>
        <div class="item_edit">
          <%= form_with model: @item, url: admin_item_path do |f| %>
            <p>
              商品名
              <%= f.text_field :name %>
            </p>
            <p><%= f.submit "変更内容を保存" %></p>
          <% end %>
        </div>
    </div>
  </div>
</div>