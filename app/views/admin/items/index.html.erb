<div class="container">
  <div class="row">
    <div class="col-2">

    </div>

    <div class="col-10">
      <h1>商品一覧・登録</h1>
      <div class="items_new">
        <%= form_with model: @item do |f| %>
          <div>
            <label>商品名</label>
              <%= f.text_field :name %>
            <%= f.submit "商品追加" %>
          </div>
        <% end %>
      </div>

      <div class="items_list">
        <table class="table tablebordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= link_to "編集",edit_admin_item_path(item), class:"btn btn-primary" %></td>
              <td><%= link_to "削除",admin_item_path(item), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>


  </div>
</div>