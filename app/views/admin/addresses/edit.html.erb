<div class="container">
  <div class="row">

    <!--ジャンル検索-->
    <div class="col-2">
      <%= render 'admin/genres/genre', genres: @genres %>
    </div>

    <div class="col-10">
      <h1>配送先編集</h1>
      <!--エラーメッセージ-->
      <%= render 'layouts/errors', obj: @address %>

        <div class="address_edit">
          <%= form_with model: @address, url: admin_address_path do |f| %>
            <table class="table table-borderless">
              <tr>
                <td>ジャンル</td>
                <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, @address.genre_id) %></td>
              </tr>
              <tr>
                <td>店舗名</td>
                <td><%= f.text_field :name %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= f.text_field :phone_number %></td>
              </tr>
              <tr>
                <td>郵便番号(ハイフンなし)</td>
                <td><%= f.text_field :postal_code %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= f.text_field :address %></td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "変更を保存", class: "btn btn-primary" %></td>
              </tr>
            </table>
          <% end %>
        </div>
    </div>
  </div>
</div>