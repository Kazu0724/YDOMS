<div class="container">
  <div class="row">
    <div class="col-2">

    </div>

    <div class="col-10">
      <h1>社員編集</h1>
        <div class="employee_edit">
          <%= form_with model: @employee, url: admin_employee_path do |f| %>
            <table class="table table-borderless">
              <tr>
                <td>名前</td>
                <td>
                  <%= f.text_field :last_name %>
                </td>
                <td>
                  <%= f.text_field :first_name %>
                </td>
              </tr>
              <tr>
                <td>フリガナ</td>
                <td><%= f.text_field :last_name_kana %></td>
                <td><%= f.text_field :first_name_kana %></td>
              </tr>
              <tr>
                <td>社員番号</td>
                <td><%= f.text_field :employee_number %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= f.text_field :phone_number %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.text_field :email %></td>
              </tr>
              <tr>
                <td>車両</td>
                <td><%= f.text_field :car_number %></td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "変更を保存する", class: "btn btn-primary" %></td>
              </tr>
            </table>
          <% end %>
        </div>
    </div>
  </div>
</div>