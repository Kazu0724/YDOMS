<!--AI評価点数-->
<span class="sentiment-score">
  <!--マイナスの場合は赤-->
  <% if inquiry.score < 0 %>
    <strong style="color: red;"><%= inquiry.score %></strong>
  <!--0の場合は黒-->
  <% elsif inquiry.score == 0 %>
    <%= inquiry.score %>
  <!--プラスの場合は緑-->
  <% else %>
    <strong style="color: green;"><%= inquiry.score %></strong>
  <% end %>
</span>