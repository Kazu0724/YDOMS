<div class="container">
  <div class="row">
    <div class="col-2">

    </div>

    <div class="col-10">
      <h1>ジャンル一覧・登録</h1>
        <div class="genre_new">
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <p>
              ジャンル名
              <%= f.text_field :name %>
            </p>
            <p>
              カラー

              <%= f.select :color, Genre.colors.keys.map { |key| [I18n.t("enums.genre.color.#{key}"), key] } %>
            </p>
            <%= f.submit "ジャンル登録" %>
          <% end %>
        </div>

        <div class="genre_table">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ジャンル名</th>
                <th>カラー</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= genre.color_i18n %></td>
                  <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
                  <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>
