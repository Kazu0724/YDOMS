 <div class="col">
      <h1>ジャンル編集</h1>
        <div class="genre_edit">
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
            <p>
              ジャンル名
              <%= f.text_field :name %>
            </p>
            <p>
              カラー
              <%= f.select :color, Genre.colors.keys.map { |key| [t("enum.genre.color.#{key}"), key] } %>
            </p>
            <%= f.submit "変更内容を保存" %>
          <% end %>
        </div>