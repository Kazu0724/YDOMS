<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'genre', genres: @genres %>
    </div>

    <div class="col-10">
      <h1>ジャンル編集</h1>
        <div class="genre_edit">
          <%= form_with model: @genre, url: admin_genre_path do |f| %>
            <p>
              ジャンル名
              <%= f.text_field :name %>
            </p>
            <p>
              カラー
              <%= f.select :color, Genre.colors.keys.map { |key| [I18n.t("enums.genre.color.#{key}"), key] } %>
            </p>
            <%= f.submit "変更内容を保存" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
