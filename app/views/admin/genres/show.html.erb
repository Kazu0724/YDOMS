<div class="container">
  <div class="row">
    <div class="col-2">

    </div>

    <div class="col-10">
      <h1>ジャンル検索結果一覧</h1>
        <div><%= @genre.name %></div>
        <table>
          <thead>
            <tr>
              <th>店舗名</th>
              <th>電話番号</th>
              <th>郵便番号</th>
              <th>住所</th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.name %></td>
                <td><%= address.phone_number %></td>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>