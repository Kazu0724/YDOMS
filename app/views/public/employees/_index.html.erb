<table class="table table-bordered">
  <thead>
    <tr>
      <th>社員名</th>
      <th>社員番号</th>
      <th>車両</th>
    </tr>
  </thead>
  <tbody>
    <% employees.each do |employee| %>
      <tr>
        <td>
          <%= link_to employee_path(employee.id) do %>
            <%= employee.last_name %><%= employee.first_name %>
          <% end %>
        </td>
        <td><%= employee.employee_number %></td>
        <td><%= employee.car_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>