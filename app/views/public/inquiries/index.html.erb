<div class="container">
  <div class="row">

    <!--ジャンル検索-->
    <div class="col-2">
      <%= render 'public/genres/genre', genres: @genres %>
    </div>

    <!--問い合わせ一覧-->
    <div class="col-10">
      <h1>問い合わせ一覧</h1>
        <div class="inquiry_index">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>件名</th>
                <th>評価点数</th>
              </tr>
            </thead>
            <tbody>
              <% @inquiries.each do |inquiry| %>
                <tr>
                  <td>
                    <%= link_to inquiry_path(inquiry.id) do %>
                      <%= inquiry.subject %>
                    <% end %>
                  </td>
                  <td>
                    <!--AI評価点数-->
                    <%= render 'admin/inquiries/sentiment_score', inquiry: inquiry %>
                  </td>
                </tr>
              <% end %>
            </tbody>
         </table>
       </div>
    </div>
  </div>
</div>