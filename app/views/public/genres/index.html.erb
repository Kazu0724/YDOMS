<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render 'genre', genres: @genres %>
    </div>

    <div class="col-10">
      <h1>ジャンル一覧</h1>
        <div class="genre_table">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ジャンル名</th>
                <th>カラー</th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= genre.color_i18n %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>